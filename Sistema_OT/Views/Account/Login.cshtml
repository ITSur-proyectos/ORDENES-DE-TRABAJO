<div class="container-fluid login-container">
    <div class="card login-card">
        <div class="text-center mb-4">
            <img src="~/img/logo.png" alt="Logo" class="img-fluid login-logo mb-2" />
            <h4 class="fw-bold">Iniciar Sesión</h4>
            <p class="text-muted">Sistema de Órdenes de Trabajo</p>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">
                @ViewBag.ErrorMessage
            </div>
        }

        <form method="post">
            <div class="mb-3">
                <label for="userId" class="form-label">Usuario o qeu </label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
                    <input type="text" id="userId" name="userId" class="form-control" required placeholder="Ingrese su usuario" />
                </div>
            </div>

            <!-- Campo Contraseña -->
            <div class="form-group mb-1">
                <label for="contrasenia">Contraseña:</label>
                <input type="password" name="contrasenia" id="contrasenia" class="form-control" placeholder="Ingrese su contraseña" required />
            </div>
             y aca que carajo hace 
            <!-- Enlace "Olvidaste tu contraseña" -->
            <div class="text-end mb-3">
                <a href="/Account/OlvidasteContrasenia">¿Olvidaste tu contraseña?</a>
            </div>


            <div class="d-grid mb-3">
                <button type="submit" class="btn login-button">Iniciar sesión</button>
            </div>

            <div class="text-center">
                <a href="#" class="text-decoration-none small">¿Olvidaste tu contraseña?</a>
            </div>
        </form>
    </div>
</div>
