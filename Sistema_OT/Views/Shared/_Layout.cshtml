<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema_OT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Sistema_OT.styles.css" asp-append-version="true" />

    <!-- jQuery y Bootstrap JS (con Popper) y bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Buscar" asp-action="Index"><b> Sistema Ordenes de Trabajo</b></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                      @*   <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Buscar" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Buscar" asp-action="Privacy">Privacy</a>
                        </li> *@

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Buscar" asp-action="Vistas">Ordenes de Trabajo</a>

                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Buscar" asp-action="VistaIndividualBuscar">Vista Individual</a>

                       @*  <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Buscar" asp-action="PruebaBD">PruebaBD</a>
                        </li> *@
                       
                    </ul>

                                <!-- Alineación a la derecha de los botones de "Buscar" y "Cerrar sesión" -->
                            <ul class="navbar-nav ms-auto">
                                @if (Context.Session.GetString("UserId") != null)
                                {
                                    <li class="nav-item">
                                        <span class="nav-link text-dark">Usuario: @Context.Session.GetString("UserId")</span>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark btn btn-outline-danger" href="@Url.Action("Logout", "Account")">Cerrar sesión</a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark btn btn-outline-primary" href="@Url.Action("Login", "Account")">Iniciar sesión</a>
                                    </li>
                                }
                            </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Sistema_OT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
