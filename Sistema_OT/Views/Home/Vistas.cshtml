@{
    ViewData["Title"] = "Gestión de Órdenes";
}

<div class="container mt-5">
    <div class="row">
        <div class="card shadow-sm">
            <div class="btn btn secondary; card-header bg-info text-white">
                <h5 class="mb-0">Gestión de Órdenes / Órdenes de Trabajo</h5>
            </div>

            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-3 text-start">
                        <h6>Cliente/Sistema</h6>
                    </div>
                    <div class="col-md-3 text-start">
                        <h6>Fecha Solicitud y Vencimiento</h6>
                    </div>
                    <div class="col-md-3 text-start">
                        <h6>Orden</h6>
                    </div>
                    <div class="col-md-3 text-start">
                        <h6>Cambio de Estado</h6>
                    </div>
                </div>

                    <div class="container">
                        <div class="row">
                            <div class="col-md-9">
                                <form method="post" action="/GestionOrdenes/SubmitForm">
                                    <div class="row row-cols-3 g-3">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="cliente">Cliente</label>
                                                <input type="text" class="form-control border-dark" id="cliente" placeholder="Ingrese cliente" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="Responsable">Responsable</label>
                                                <input type="text" class="form-control border-dark" id="Responsable" placeholder="Ingrese responsable" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="asunto">Asunto</label>
                                                <input type="text" class="form-control border-dark" id="asunto" placeholder="Ingrese el asunto" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="sistema">Sistema</label>
                                                <input type="text" class="form-control border-dark" id="sistema" placeholder="Ingrese sistema" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="estado">Estado</label>
                                                <input type="text" class="form-control border-dark" id="estado" placeholder="Ingrese estado" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="solicitante">Solicitante</label>
                                                <input type="text" class="form-control border-dark" id="solicitante" placeholder="Ingrese solicitante" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="proyecto">Proyecto</label>
                                                <input type="text" class="form-control border-dark" id="proyecto" placeholder="Ingrese proyecto" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="moduloPantalla">Módulo / Pantalla</label>
                                                <input type="text" class="form-control border-dark" id="moduloPantalla" placeholder="Ingrese módulo/pantalla" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="solicitadoPor">Solicitado Por</label>
                                                <input type="text" class="form-control border-dark" id="solicitadoPor" placeholder="Ingrese quién solicitó" />
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>

                            <div class="col-md-3">
                                <div class="card border-dark h-90 mt-4">
                                    <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                        <h5 class="card-title mb-4">Búsqueda</h5>
                                        <button type="submit" class="btn btn-info mb-2 w-75">Búsqueda</button>
                                        <button type="reset" class="btn btn-info w-75">Limpiar</button>
                                    </div>
                                </div>
                            </div>

                            <div class="card-body">

                                <div class="d-flex justify-content-start">
                                    <button class="btn btn-light me-2">OT N</button>
                                    <button class="btn btn-light me-2">Depende De</button>
                                    <button class="btn btn-light me-2">OT. Impl</button>
                                    <button class="btn btn-light me-2">Fecha Solicitud</button>
                                    <button class="btn btn-light me-2">Fecha Vencimiento</button>
                                    <button class="btn btn-light me-2">Clientes</button>
                                    <button class="btn btn-light me-2">Sistemas</button>
                                    <button class="btn btn-light me-2">Proyectos</button>
                                    <button class="btn btn-light me-2">Responsable</button>
                                    <button class="btn btn-light me-2">Estado</button>


                                </div>

                            </div>

                        </div>

                    </div>

                    <div class="row mt-4">
                        <div class="col">
                            <div class="card border-dark">
                                <div class="card-body">
                                 
                                    <div class="row">
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="cantidadOT">Cantidad OT</label>
                                                <input type="number" class="form-control border-dark" id="cantidadOT" placeholder="Ingrese cantidad OT" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="totalHorasEstimadas">Total de horas estimadas</label>
                                                <input type="number" class="form-control border-dark" id="totalHorasEstimadas" placeholder="Ingrese horas estimadas" />
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-group">
                                                <label for="totalHorasAvances">Total de horas avances</label>
                                                <input type="number" class="form-control border-dark" id="totalHorasAvances" placeholder="Ingrese horas avances" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                    </div>  
                </div>
             </div>
       </div>
 </div>