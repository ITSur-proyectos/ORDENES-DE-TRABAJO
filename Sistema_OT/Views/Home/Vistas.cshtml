<div class="container mt-5" style="font-size: 12px">
    <div class="row">
        <div class="card shadow-sm">
            <div class="btn btn secondary; card-header bg-info text-white">
                <h5 class="mb-0">Individual | Órdenes de Trabajo</h5>
            </div>

            <div class="card-body" style="font-size: 12px">
                <div class="row align-items-center">
                    <div class="col-md-3 text-start">
                        <h6>Cliente/Sistema</h6>
                    </div>
                    <div class="col-md-3 text-start">
                        <h6>Fecha Solicitud y Vencimiento</h6>
                    </div>
                    <div class="col-md-3 text-start">
                        <h6>Orden</h6>
                    </div>
                    <div class="col-md-3 text-start">
                        <h6>Cambio de Estado</h6>
                    </div>
                </div>
                
                    <div class="container" >
                        <div class="row">
                            <div class="col-md-9" >
                               <form method="post" action="/GestionOrdenes/SubmitForm">
                                    <div class="row row-cols-3 g-3">
                                        <div class="col-md-4" >
                                            <div class="form-group" >
                                                <label for="cliente">Cliente</label>
                                            <input type="text" class="form-control border-dark" style="font-size: 12px" id="cliente" placeholder="Ingrese cliente" />
                                            </div>
                                        </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label for="sistema">Sistema</label>
                                            <input type="text" class="form-control border-dark" style="font-size: 12px" id="sistema" placeholder="Ingrese sistema" />
                                        </div>
                                    </div>
                                    <div class="col-md-1">
                                        <div class="form-group">
                                            <label for="proyecto">Proyecto</label>
                                            <input type="text" class="form-control border-dark" style="font-size: 12px"  id="proyecto" placeholder="Ingrese" />
