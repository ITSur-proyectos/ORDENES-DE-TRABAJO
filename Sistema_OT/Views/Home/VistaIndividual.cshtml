@{
    ViewData["Title"] = "VistaIndividual";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<link rel="stylesheet" href="~/css/VistaIndividual.css" />

<!-- Contenedor principal para el formulario Individual-->
<div class="container-fluid mt-3" style="width: 100%; max-width: 1600px; margin: 0 auto;">
    <div class="row">
        <div class="col-12">
            <!-- Tarjeta con el formulario -->
            <div class="card shadow-sm">
                <!-- Cabecera de la tarjeta con el título -->
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Individual | Órdenes de trabajo</h5>
                </div>
                <div class="card-body">
                    <!-- Inicio del formulario -->
                    <form method="post" action="/Individual/SubmitForm">

                        <!-- Ajuste de filas para mejor alineación y espacio entre campos -->
                        <div class="row row-cols-3 g-3">
                            <!-- Campo de Orden -->
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="orden">Orden</label>
                                    <input type="text" class="form-control" style="font-size:12px;" id="orden" placeholder="Ingrese el número" />
                                </div>
                            </div>
                            <!-- Campo de Dependencia -->
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="dependencia">Depende de</label>
                                    <input type="text" class="form-control" style="font-size:12px;" id="dependencia" placeholder="Depende de..." />
                                </div>
                            </div>
                            <!-- Botón de búsqueda ajustado con `d-flex align-items-end` para alineación vertical -->
                            <div class="col-md-1 d-flex align-items-end">
                                <button type="button" class="btn boton">Buscar</button>
                            </div>
                            <!-- Campos adicionales -->
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="fechaSolicitud">Fecha de Solicitud</label>
                                    <input type="date" class="form-control" style="font-size:12px;" id="fechaSolicitud" />
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="fechaVencimiento">Fecha de Vencimiento</label>
                                    <input type="date" class="form-control" style="font-size:12px;" id="fechaVencimiento" />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label for="estadoTrabajo">Estado del Trabajo</label>
                                    <select class="form-control" style="font-size:12px;" id="estadoTrabajo">
                                        <!-- Opciones de estado -->
                                        <option>Pendiente</option>
                                        <option>Entregado</option>
                                        <option>En desarrollo</option>
                                        <!-- ... otras opciones ... -->
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Segunda fila con campos adicionales (Cliente, Sistema, Proyecto) y botón de búsqueda -->
                        <div class="row row-cols-3 g-3">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="cliente">Cliente</label>
                                    <input type="text" class="form-control" style="font-size:12px;" id="cliente" placeholder="Ingrese cliente" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="sistema">Sistema</label>
                                    <input type="text" class="form-control" style="font-size:12px;" id="sistema" placeholder="Ingrese sistema" />
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="proyecto">Proyecto</label>
                                    <input type="text" class="form-control" style="font-size:12px;" id="proyecto" placeholder="Ingrese proyecto" />
                                </div>
                            </div>
                            <div class="col-md-3 d-flex align-items-end">
                                <!-- Botón de búsqueda adicional con alineación vertical -->
                                <button type="button" class="btn boton">Buscar</button>
                            </div>
                        </div>

                        <!-- Tercera fila con Usuario Responsable, Usuario Solicitante y Módulo/Pantalla -->
                        <div class="row mt-3">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label for="usuarioResponsable">Usuario Responsable</label>
                                    <select class="form-control" style="font-size:12px;" id="usuarioResponsable">
                                        <option>...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label for="usuarioSolicitante">Usuario Solicitante</label>
                                    <select class="form-control" style="font-size:12px;" id="usuarioSolicitante">
                                        <option>...</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label for="moduloPantalla">Módulo / Pantalla</label>
                                    <input type="text" class="form-control" style="font-size:12px;" id="moduloPantalla" placeholder="Ingrese módulo/pantalla" />
                                </div>
                            </div>
                        </div>

                        <!-- Cuarta fila con campos de Asunto y Solicitado Por -->
                        <div class="row row-cols-3 g-3">
                            <div class="col-md-7">
                                <div class="form-group">
                                    <label for="asunto">Asunto</label>
                                    <input type="text" class="form-control" style="font-size:12px;" id="asunto" placeholder="Ingrese el asunto" />
                                </div>
                            </div>
                            <div class="col-md-5">
                                <div class="form-group">
                                    <label for="solicitadoPor">Solicitado Por</label>
                                    <input type="text" class="form-control" style="font-size:12px;" id="solicitadoPor" placeholder="Ingrese quien solicita" />
                                </div>
                            </div>
                        </div>

                        <!-- Quinta fila con horas y opciones adicionales -->
                        <div class="row row-cols-3 g-3">
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label for="horasFacturables">Hs. Facturables</label>
                                    <input type="number" class="form-control" style="font-size:12px;" id="horasFacturables" placeholder="0" />
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="porcentajeAvance">% de Avance</label>
                                    <input type="number" class="form-control" style="font-size:12px;" id="porcentajeAvance" placeholder="0" min="0" max="100" />
                                </div>
                            </div>
                            <div class="col-md-1">
                                <div class="form-group">
                                    <label for="horasConsumidas">Hs. Consumo</label>
                                    <input type="number" class="form-control" style="font-size:12px;" id="horasConsumidas" placeholder="0" />
                                </div>
                            </div>
                        </div>

                        <!-- Barra de herramientas de formato de texto, ajustada con padding y margen reducido -->
                        <div class="toolbar mt-3 mb-3">
                            <button class="toolbar-btn"><i class="fas fa-undo"></i></button>
                            <button class="toolbar-btn"><i class="fas fa-redo"></i></button>
                            <!-- ... otros botones de formato ... -->
                        </div>

                        <!-- Botones de acción agrupados -->
                        <div class="row mt-2">
                            <div class="col-md-12 d-flex justify-content-between align-items-center">
                                <button class="btn boton">Imprimir</button>
                                <button class="btn boton">Ver Documentación Digital</button>

                                <!-- Agrupación de otros botones para mejor presentación -->
                                <div class="grupo-botones">
                                    <button class="btn boton">Copiar Orden</button>
                                    <button class="btn boton">Enviar Orden</button>
                                    <button class="btn boton">Agregar</button>
                                    <button class="btn boton">Modificar</button>
                                    <button class="btn boton">Grabar</button>
                                    <button class="btn boton-cancelar">Cancelar</button> <!-- Botón con estilo diferente -->
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
